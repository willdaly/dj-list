.controls.col-md-3
  ul( class='nav nav-pills nav-justified', role='tablist')
    li.active
      a(href='#')#songsButton Songs
    li
      a(href='#')#playlistsButton Playlists
  #songControls
    .genres
      label Hip-Hop
      input(type='checkbox', value='Hip-Hop')
      label Soul
      input(type='checkbox', value='Soul')
      label Jazz
      input(type='checkbox', value='Jazz')
      label Rock
      input(type='checkbox', value='Rock')
      label Pop
      input(type='checkbox', value='Pop')
      label Melodiya
      input(type='checkbox', value='Melodiya')
      label OST
      input(type='checkbox', value='OST')
      label Electronic
      input(type='checkbox', value='Electronic')
      label Battle
      input(type='checkbox', value='Battle')
      label 45 King
      input(type='checkbox', value='45 King')
      label Beats
      input(type='checkbox', value='Hip-Hop Instrumental')

    .slider
    .input-group#slowbpm
      span.input-group-addon slowest bpm
      input.form-control#lowBPM(type='number')
      span.input-group-btn
        button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown') Transpose
          span.caret
        ul#tp.dropdown-menu
          li(value='-1')
            a(href='#').transpose -1
          li(value='1')
            a(href='#').transpose +1
          li(value='-2')
            a(href='#').transpose -2
          li(value='2')
            a(href='#').transpose +2
          li(value='-3')
            a(href='#').transpose -3
          li(value='3')
            a(href='#').transpose +3
          li(value='-4')
            a(href='#').transpose -4
          li(value='4')
            a(href='#').transpose +4
          li(value='-5')
            a(href='#').transpose -5
          li(value='5')
            a(href='#').transpose +5

    .input-group#fastbpm
      span.input-group-addon fastest bpm
      input.form-control#highBPM(type='number')
      span.input-group-btn
        button.btn.btn-default(type='button')#bpmFilter BPM filter

    .input-group#keyinput
      span.input-group-addon select key
      select.form-control#key
        option AbM
        option abm
        option AM
        option am
        option BbM
        option bbm
        option BM
        option bm
        option CM
        option cm
        option C#M
        option c#m
        option DM
        option dm
        option EbM
        option ebm
        option EM
        option em
        option FM
        option fm
        option F#M
        option f#m
        option GM
        option gm
        option G#M
        option g#m
      span.input-group-btn
        button.btn.btn-default(type='button')#keyFilter key filter

    button.btn.btn-default.btn-lg#bpmKeyFilter Search

  #playlistControls(style='display: none')
    .input-group#createPlaylist
      input.form-control(type='text', name='name', placeholder='check songs, enter name')#name
      span.input-group-btn
        button.btn.btn-default(type='button')#saveSet Create Playlist
