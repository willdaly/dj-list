doctype html
html
  head
    meta(charset='utf-8')
    title= title
    link(href='/less/app.css', rel='stylesheet')
  body
    #navBar
      h1= user ? user.email : ''
      button
        a(href='/') home
      button
        a(href='/login') login or register
      if(user)
        button
          a(href='/lists') list
        form(method='POST', action='logout')
          button logout

    block content

    script(src='/js/vendor/jquery-2.1.1.js')
