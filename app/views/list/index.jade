extends ../shared/template

block content

  .slider
  .controls
    .input-group
      span.input-group-addon lowest bpm
      input.form-control#lowBPM
    .input-group
      span.input-group-addon upper bpm
      input.form-control#highBPM
      span.input-group-btn
        button.btn.btn-default(type='button')#bpmFilter BPM filter

    .input-group
      span.input-group-btn
        button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown') search by
          span.caret
        ul.dropdown-menu
          li
            a(href='#')#artistSearch Artist
          li
            a(href='#')#albumSearch Album
          li
            a(href='#')#songSearch Song
      input.form-control(type='text', name='search', placeholder='enter search then click \'search by\'')#searchInput

    .input-group
      span.input-group-addon select key
      select.form-control#key
        option AbM
        option abm
        option AM
        option am
        option BbM
        option bbm
        option BM
        option bm
        option CM
        option cm
        option C#M
        option c#m
        option DM
        option dm
        option EbM
        option ebm
        option EM
        option em
        option FM
        option fm
        option F#M
        option f#m
        option GM
        option gm
        option G#M
        option g#m
      span.input-group-btn
        button.btn.btn-default(type='button')#keyFilter key filter

    .genres
      p Select Genres (required)
      label Hip-Hop
      input(type='checkbox', value='Hip-Hop')
      label Soul
      input(type='checkbox', value='Soul')
      label Jazz
      input(type='checkbox', value='Jazz')
      label Rock
      input(type='checkbox', value='Rock')
      label Pop
      input(type='checkbox', value='Pop')
      label Melodiya
      input(type='checkbox', value='Melodiya')
      label OST
      input(type='checkbox', value='OST')
      label Electronic
      input(type='checkbox', value='Electronic')
      label Battle
      input(type='checkbox', value='Battle')
      label 45 King
      input(type='checkbox', value='45 King')
      label Hip-Hop Instrumentals
      input(type='checkbox', value='Instrumentals')
      button.btn.btn-default.btn-md#genreFilter genre filter

    button.btn.btn-default.btn-md#bpmKeyFilter BPM Key filter
